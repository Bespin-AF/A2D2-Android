<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">@drawable/app_theme_gradient</item>-->
    </style>

    <style name="App.Theme.Driver" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/driverColorPrimary</item>
        <item name="colorPrimaryDark">@color/driverColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/driverTextColor</item>
    </style>

    <style name="App.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="activity_a2d2_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/textColor</item>
        <item name="hintTextAppearance">@style/text_input_layout_hint_text_focused</item>
    </style>

    <style name="text_input_layout_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff3333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_input_layout_hint_text_focused">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
